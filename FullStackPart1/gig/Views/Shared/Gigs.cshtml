@using System.Web.UI.WebControls
@using GigHub.Models
@model GigHub.ViewModels.GigsViewModel

@{
    ViewBag.Title = "Home Page";
}


<h2>@Model.Heading</h2>
@using (Html.BeginForm("Search", "Gigs"))
{
    <div class="form-group">
        <div class="input-group SaerchGigs">
        @Html.TextBoxFor(m => m.SearchTerm, new {@class = "form-control" ,@placeholder= "Search by Artist Genre Venue ..." })
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-search"></i>
        </span>
    </div>
   
    </div>
}
<ul class="gigs voffset4">
    @foreach (var gig in Model.UpComingGigs)
    {
       
        <li>
    
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
   
                    <a href="@Url.Action("Details","Gigs",new {id=gig.id})" >@gig.Artist.Name</a>
                   @if (gig.Iscanceled)
                   {
                       
                       <span class="label label-warning">Canceled</span>
                   }

                    @if (Model.ShowAction)
                    {
                        
                        <button data-gig-id="@gig.ArtistID" class="btn btn-link  btn-sm pull-right js-toggle-Follow">Follow</button>

                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                @if (Model.ShowAction && !gig.Iscanceled)
                {
                    <button data-gig-id="@gig.id" class="btn @(Model.Attendance.Contains(gig.id) ? "btn-info" : "btn-default") 
                            btn-sm pull-right js-toggle-attendance">Going?</button>

                }
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function() {

            $(".js-toggle-attendance").click(function(e) {

                var button = $(e.target);
                if (button.hasClass("btn-default")) {
                    $.post("/api/Attendances", { GigId: button.attr("data-gig-id") })
                        .done(function() {

                            button.removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        }).fail(function() {
                            alert("Sonthing failed!");
                        });
                } else {

                    $.ajax({
                        url: "/api/Attendances/" + button.attr("data-gig-id"),
                        method: "DELETE"

                    }).done(function() {
                        button.addClass("btn-default")
                            .removeClass("btn-info")
                            .text("Going?");

                    }).fail(function() {

                        alert("Sonthing failed!");

                    });


                }

            });

            $(".js-toggle-Follow").click(function(e) {

                var button = $(e.target);
                $.post("/api/Followings", { FolloweeId: button.attr("data-gig-id") })
                    .done(function() {

                        button.removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Following");
                    }).fail(function() {
                        alert("Sonthing failed!");
                    });
            });
        });

    </script>


}
